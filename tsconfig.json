{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "checkJs": true,
    "target": "ESNext",
    "lib": ["ESNext"],
    "types": ["jest", "node"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
